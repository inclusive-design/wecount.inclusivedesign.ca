---
title: Search
permalink: /search/
---
{% extends 'layouts/base.njk' %}

{% block content %}
    <article class="search">
        <h1>Search results: {{ '{{ searchQuery }}' }}</h1>
        <p role="status" v-if="searchStatus">{{ '{{ searchStatus }}' }}</p>
        <div class="news-grid" v-if="searchResults.length > 0">
          <div v-for="item in searchResults" :key="item.id" class="api-content">
              <article class="news-item">
                  <figure v-if="item.category==='views'" class="preview-media">
                      <img v-if="item.picture" :src="item.picture" :alt="item.altTag" class="news-item-img">
                      {# <WeCountLogo v-else class="news-item-img" /> #}
                  </figure>

                  <h2 class="h3">
                      <a :href="item.href">
                          {{ '{{ item.title }}' }}
                      </a>
                  </h2>

                  <div v-if="item.category==='views'" class="author">
                      By {{ '{{ item.author }}' }}
                  </div>

                  <div class="date">
                      <time :datetime="item.dateTime" class="dt-published">{{ '{{ item.date }}' }}</time>
                  </div>

                  <div v-html="item.excerpt" class="preview-content" />
              </article>
          </div>
      </div>
    </article>
{% endblock %}

{% block headerScripts %}
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.11"></script>
{% endblock %}

{% block footerScripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"></script>
<script src="/js/search.js"></script>
{% endblock %}
