{% block footerScripts %}
<script>
$(document).ready(function () {
	document.getElementById("defaultContainer").classList.add("map");

	fluid.covidMap.map(".fl-mapviz-container", {
		dataUrl: "/lib/covid-data-monitor/build/data/output.csv",
		searchResultTemplateUrl: window.location.origin + "/lib/covid-data-monitor/build/html/searchResultTemplate.html"
	});
});
</script>
