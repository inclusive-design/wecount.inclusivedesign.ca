{
  "name": "@wecount/wecount.inclusivedesign.ca",
  "version": "2.8.0",
  "description": "The source files for the We Count website, built with Eleventy.",
  "license": "BSD-3-Clause",
  "author": "OCAD University <idrc@ocadu.ca>",
  "contributors": [
    "Cindy Li <cli@ocadu.ca> (https://github.com/cindyli)",
    "Gregor Moss <gmoss@ocadu.ca> (https://github.com/blueslug)",
    "Justin Obara <jobara@ocadu.ca> (https://github.com/jobara)",
    "Ted Thompson <tthompson@ocadu.ca> (https://github.com/TeddTech)",
    "Ned Zimmerman <nzimmerman@ocadu.ca> (https://github.com/greatislander)"
  ],
  "private": true,
  "scripts": {
    "build": "npm-run-all clean -s build:*",
    "build:mapDependency": "npm explore covid-data-monitor -- npm install fs-extra && npm explore covid-data-monitor -- npm run build:noInfusion",
    "build:eleventy": "node --max-old-space-size=6000 ./node_modules/@11ty/eleventy/cmd.js",
    "build:netlify-cms": "node ./build-cms.js",
    "clean": "rimraf dist",
    "dev": "npm run build:mapDependency && cross-env ELEVENTY_ENV=development node --max-old-space-size=6000 ./node_modules/@11ty/eleventy/cmd.js --serve --port=3000",
    "start": "npm-run-all clean start:*",
    "start:eleventy": "concurrently \"npm run dev\" \"node ./build-cms.js -w\" \"netlify-cms-proxy-server\"",
    "serve": "npx serve dist",
    "lint:css": "stylelint src/scss/**/*.scss",
    "lint:js": "eslint \"**/*.js\"",
    "lint:md": "markdownlint \"**/***.md\" --ignore-path .gitignore --ignore LICENSE.md --ignore src/collections/ --ignore .github/**/*.md",
    "lint": "run-s lint:*",
    "lint-fix:css": "npm run lint:css -- --fix",
    "lint-fix:js": "npm run lint:js -- --fix",
    "lint-fix:md": "npm run lint:md -- --fix",
    "lint-fix": "run-s lint-fix:*",
    "release:major": "release major",
    "release:minor": "release minor",
    "release:patch": "release patch",
    "prepare": "husky install"
  },
  "dependencies": {
    "@11ty/eleventy": "2.0.1",
    "@11ty/eleventy-navigation": "0.3.5",
    "@11ty/eleventy-plugin-rss": "1.2.0",
    "@tbranyen/jsdom": "13.0.0",
    "airtable": "0.12.2",
    "axios": "1.6.5",
    "concurrently": "8.2.2",
    "covid-data-monitor": "1.0.0",
    "eleventy-plugin-pwa-v2": "1.0.1",
    "estrella": "1.4.1",
    "html-minifier": "4.0.0",
    "infusion": "4.6.0",
    "markdown-it": "14.0.0",
    "modern-css-reset": "1.4.0",
    "netlify-cms-widget-uuid-v4": "1.1.1",
    "nodemailer": "6.9.8",
    "nunjucks": "3.2.4",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.4",
    "@commitlint/config-conventional": "18.4.4",
    "autoprefixer": "10.4.16",
    "clean-css": "5.3.3",
    "cross-env": "7.0.3",
    "cssesc": "3.0.0",
    "dotenv": "16.3.1",
    "eleventy-plugin-error-overlay": "1.0.0",
    "eslint": "8.56.0",
    "eslint-plugin-react": "7.33.2",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "markdownlint-cli": "0.38.0",
    "netlify-cms-proxy-server": "1.3.24",
    "npm-run-all": "4.1.5",
    "release": "6.3.1",
    "rimraf": "5.0.5",
    "sass": "1.69.7",
    "stylelint": "15.11.0",
    "stylelint-config-standard-scss": "7.0.1",
    "stylelint-order": "6.0.4",
    "stylelint-scss": "5.3.2",
    "turndown": "7.1.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.scss": [
      "stylelint"
    ],
    "*.md": [
      "markdownlint --ignore LICENSE.md --ignore src/collections/ --ignore .github/**/*.md"
    ]
  }
}
