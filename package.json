{
  "name": "@wecount/wecount.inclusivedesign.ca",
  "version": "2.8.0",
  "description": "The source files for the We Count website, built with Eleventy.",
  "license": "BSD-3-Clause",
  "author": "OCAD University <idrc@ocadu.ca>",
  "contributors": [
    "Cindy Li <cli@ocadu.ca> (https://github.com/cindyli)",
    "Gregor Moss <gmoss@ocadu.ca> (https://github.com/blueslug)",
    "Justin Obara <jobara@ocadu.ca> (https://github.com/jobara)",
    "Ted Thompson <tthompson@ocadu.ca> (https://github.com/TeddTech)",
    "Ned Zimmerman <nzimmerman@ocadu.ca> (https://github.com/greatislander)"
  ],
  "private": true,
  "scripts": {
    "build": "npm-run-all -l clean -p build:*",
    "build:eleventy": "cross-env NODE_ENV=production node --max-old-space-size=6000 ./node_modules/@11ty/eleventy/cmd.js",
    "build:cms": "node ./build-cms.js",
    "clean": "rimraf _site",
    "cms": "decap-server",
    "dev": "node --max-old-space-size=6000 ./node_modules/@11ty/eleventy/cmd.js --incremental --serve --port=3000",
    "start": "npm-run-all -l clean -p start:*",
    "start:cms": "node ./build-cms.js -w",
    "start:eleventy": "run-p dev cms",
    "serve": "npx serve _site",
    "lint": "run-s -l lint:*",
    "lint:styles": "stylelint \"**/*.scss\"",
    "lint:scripts": "eslint \"**/*.{js,md}\"",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
    "lint:yml": "eslint \"**/*.yml\"",
    "lint-fix:styles": "npm run lint:styles -- --fix",
    "lint-fix:scripts": "npm run lint:scripts -- --fix",
    "lint-fix:markdown": "npm run lint:markdown -- --fix",
    "lint-fix:yml": "npm run lint:yml -- --fix",
    "lint-fix": "run-s lint-fix:*",
    "release:major": "release major",
    "release:minor": "release minor",
    "release:patch": "release patch",
    "prepare": "husky install"
  },
  "dependencies": {
    "@11ty/eleventy": "2.0.1",
    "@11ty/eleventy-navigation": "0.3.5",
    "@11ty/eleventy-plugin-rss": "1.2.0",
    "airtable": "0.12.2",
    "axios": "1.6.7",
    "decap-cms": "3.1.1",
    "eleventy-plugin-fluid": "2.7.1",
    "eleventy-plugin-pwa-v2": "1.0.1",
    "estrella": "1.4.1",
    "html-minifier": "4.0.0",
    "infusion": "4.6.0",
    "linkedom": "0.16.8",
    "lite-youtube-embed": "0.3.0",
    "markdown-it": "14.0.0",
    "modern-css-reset": "1.4.0",
    "netlify-cms-widget-uuid-v4": "1.1.1",
    "nodemailer": "6.9.9",
    "nunjucks": "3.2.4",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "autoprefixer": "10.4.17",
    "cross-env": "7.0.3",
    "decap-server": "3.0.2",
    "dotenv": "16.4.1",
    "eslint": "8.56.0",
    "eslint-config-fluid": "2.1.1",
    "eslint-plugin-jsdoc": "48.0.4",
    "eslint-plugin-markdown": "3.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-yml": "1.12.2",
    "husky": "9.0.10",
    "lint-staged": "15.2.1",
    "markdownlint-cli2": "0.12.1",
    "markdownlint-config-fluid": "0.1.5",
    "npm-run-all": "4.1.5",
    "release": "6.3.1",
    "rimraf": "5.0.5",
    "stylelint": "14.16.1",
    "stylelint-config-fluid": "1.0.0",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-order": "6.0.4",
    "stylelint-use-logical-spec": "5.0.1",
    "turndown": "7.1.2"
  },
  "lint-staged": {
    "*.scss": "stylelint --fix",
    "*.{js,yml}": "eslint --fix",
    "*.md": [
      "markdownlint-cli2 --fix",
      "eslint --fix"
    ]
  }
}
